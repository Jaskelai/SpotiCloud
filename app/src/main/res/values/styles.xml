<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

    <style name="TextLight">
        <item name="android:fontFamily">@font/oxygen_light</item>
    </style>

    <style name="TextRegular">
        <item name="android:fontFamily">@font/oxygen</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:colorAccent">@color/color_primary</item>
    </style>

    <style name="ButtonRounded" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="TextRegular.StartScreenHeadingText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/color_start_text</item>
    </style>

    <style name="TextRegular.StartScreenText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_start_text</item>
    </style>

    <style name="ButtonRounded.StartScreenButtons">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@drawable/selector_buttons_start</item>
    </style>

    <style name="TextRegular.SoundcloudAuthRegularText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/color_black_text</item>
    </style>

    <style name="TextRegular.SoundcloudAuthErrorText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_red_error</item>
    </style>

    <style name="ButtonRounded.SoundcloudAuthButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="elevation">2dp</item>
        <item name="android:backgroundTint">@color/color_soundcloud_auth_buttons</item>
    </style>

    <style name="RoundedEditTextLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/oxygen</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="TextRegular.TrackItemTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_black_text</item>
    </style>

    <style name="TextRegular.TrackItemAuthor">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_black_text</item>
    </style>

</resources>
