<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

    <style name="TextLight">
        <item name="android:fontFamily">@font/oxygen_light</item>
    </style>

    <style name="TextRegular">
        <item name="android:fontFamily">@font/oxygen</item>
    </style>

    <style name="StartScreenHeadingText" parent="TextRegular">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/color_start_text</item>
    </style>

    <style name="StartScreenRegularText" parent="TextRegular">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_start_text</item>
    </style>

    <style name="StartScreenRegularText.StartScreenButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:backgroundTint">@color/color_start_buttons</item>
    </style>

</resources>
